$if bash
    set editing-mode vi
    set keyseq-timeout 5
    set show-mode-in-prompt on
    set vi-cmd-mode-string "\1\e[38;2;177;177;177m\2❯\1\e[0m\2"
    set vi-ins-mode-string "\1\e[38;2;208;22;122m\2❯\1\e[0m\2"

    set keymap vi-command
    "v": ""
    "\C-p": history-search-backward
    "\C-n": history-search-forward
    "L": forward-word
    "H": backward-word

    set keymap vi-insert
    "\C-p": history-search-backward
    "\C-n": history-search-forward
$endif
