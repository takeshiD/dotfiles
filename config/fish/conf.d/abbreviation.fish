#=======================================================
# Abbreviation
#=======================================================

#-------------------------------------------------------
# ls -> lsd
#-------------------------------------------------------
if command -v lsd &> /dev/null
    abbr --add ls "lsd"
    abbr --add ll "lsd -la"
    abbr --add la "lsd --tree --depth 2"
else
    abbr --add ll "ls -alF"
    abbr --add la "ls -A"
end

#-------------------------------------------------------
# cat -> bat
#-------------------------------------------------------
if command -v bat &> /dev/null
    abbr --add cat "bat"
end

#-------------------------------------------------------
# du -> dust
#-------------------------------------------------------
if command -v duf &> /dev/null
    abbr --add du "dust --reverse"
end

#-------------------------------------------------------
# df -> duf
#-------------------------------------------------------
if command -v duf &> /dev/null
    abbr --add df "duf"
end

