{
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "autosave": "off",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Hackgen Console NF",
  "confirm_quit": false,
  "centered_layout": {
    "left_padding": 0.0,
    "right_padding": 0.0
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "enable_language_server": true,
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "formatter": "language_server",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 500,
    "scroll_debounce_ms": 50
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Hard",
    "dark": "One Dark"
  },
  "git_diff": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 200,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "scrollbar": {
      "show": "always"
    }
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "soft_wrap": "editor_width",
  "show_whitespaces": "selection",
}
