[core]
    editor = nvim
    pager = delta --side-by-side

[interactive]
    diffFilter = delta --color-only

[color]
	diff = auto
	status = auto
	branch = auto
    ui = auto

[init]
	defaultBranch = main

[credential]
	helper = store

[delta]
    navigate = true
    dark = true

[merge]
    conflictstyle = zdiff3
[alias]
    branch-recent = branch --sort=-committerdate --format='%(color:cyan)%(committerdate:short)%(color:reset) %(if)%(HEAD)%(then)%(color:green bold) *%(else)%(color:red dim)  %(end)%(refname:short)%(color:reset)'
    log-graph = log --all --graph --decorate --pretty=format:'%C(yellow)%h%Creset %C(cyan)%ad%Creset %s %C(green)%d%Creset' --date=short
